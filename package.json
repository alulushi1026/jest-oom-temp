{
  "name": "jest-oom-temp",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "migrate": "npm run migrate --workspace=@concentro/db",
    "generate": "npm run generate --workspace=@concentro/db",
    "push": "npm run push --workspace=@concentro/db",
    "deploy": "npm run deploy --workspace=@concentro/jobs",
    "test": "jest",
    "test:inspect": "node --inspect-brk --expose-gc ./node_modules/.bin/jest --detectOpenHandles --no-cache",
    "test:debug": "node --inspect-brk --max-old-space-size=2048 --expose-gc ./node_modules/.bin/jest --detectOpenHandles --no-cache",
    "test:profile": "node --inspect --max-old-space-size=2048 --expose-gc ./node_modules/.bin/jest --runInBand --logHeapUsage --detectOpenHandles --no-cache"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/jest": "^0.2.36",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.13",
    "cypress": "^13.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@opentelemetry/api": "1.9.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@swc/jest": "^0.2.36",
    "@trigger.dev/core": "^3.0.12",
    "@trigger.dev/sdk": "^3.0.12",
    "@types/node": "^22.7.5",
    "lucide-react": "^0.400.0",
    "react-hook-form": "^7.53.0"
  },
  "overrides": {
    "zod": "3.22.3",
    "@radix-ui/react-dialog": "^1.0.5"
  },
  "type": "module"
}
